// schema.prisma

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING")
    // uses a direct connection
}

model Items {
    id       String  @id @default(cuid())
    value    String
    parent   String?
    parentId String?
    column   Int
    userId   String
    children Int?
    depth    Int
    index    Int
    isLast   Boolean
    User     User?   @relation(fields: [userId], references: [id])
}

model User {
    id    String  @id @default(cuid())
    login String  @unique
    email String? @unique
    items Items[]
}
